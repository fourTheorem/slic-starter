{
  "name": "slic-starter",
  "version": "1.3.0",
  "description": "A complete serverless starter application",
  "engines": {
    "node": ">=16.15"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "coverage": "npm run test:packages -- --cov --coverage-report=html",
    "format": "eslint --cache --fix .",
    "test:lint": "eslint .",
    "tap": "AWS_XRAY_CONTEXT_MISSING=LOG_ERROR AWS_XRAY_LOG_LEVEL=silent tap",
    "test:packages": "npm run tap -- --branches=100 --statements=100 --functions=100 --lines=100",
    "test": "npm run test:lint && npm run test:packages",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fourTheorem/slic-starter.git"
  },
  "keywords": [
    "serverless",
    "starter",
    "project",
    "aws"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourTheorem/slic-starter/issues"
  },
  "homepage": "https://github.com/fourTheorem/slic-starter#readme",
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        200
      ]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "README.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} ðŸš€ [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "awscred": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "semantic-release": "^19.0.3",
    "serverless": "^3.19.0",
    "tap": "^16.2.0"
  },
  "dependencies": {
    "@aws-cdk/aws-iam": "^1.159.0",
    "@aws-cdk/core": "^1.159.0",
    "@hapi/bourne": "^3.0.0",
    "@middy/core": "^3.0.4",
    "@middy/http-cors": "^3.0.4",
    "@middy/http-error-handler": "^3.0.4",
    "@middy/http-event-normalizer": "^3.0.4",
    "@middy/http-json-body-parser": "^3.0.4",
    "@middy/input-output-logger": "^3.0.4",
    "@middy/ssm": "^3.0.4",
    "aws-sdk": "^2.1153.0",
    "aws-signed-axios": "^1.1.0",
    "aws-xray-sdk-core": "^3.3.6",
    "lodash": "^4.17.21",
    "pino": "^8.0.0"
  }
}
